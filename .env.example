# Hệ thống điểm danh - Environment Variables
# Copy file này thành .env và điền các giá trị thực tế

# Flask Secret Key - tạo key mới cho production
SECRET_KEY=your-secret-key-here-change-in-production

# Database
DATABASE_PATH=attendance_system.db

# Camera
CAMERA_INDEX=0
DEMO_MODE=0

# Face Recognition Thresholds
# FACE_RECOGNITION_THRESHOLD: Ngưỡng confidence tối thiểu (0.0-1.0)
# - 0.6 = Cân bằng (khuyến nghị)
# - 0.7-0.8 = Chặt chẽ (ít false positive, có thể bỏ lỡ)
# - 0.4-0.5 = Lỏng lẻo (nhiều false positive)
FACE_RECOGNITION_THRESHOLD=0.6

# FACE_DISTANCE_THRESHOLD: Khoảng cách Euclidean tối đa
# - 0.45 = Cân bằng (khuyến nghị)
# - 0.35-0.40 = Chặt chẽ (chỉ nhận diện khi rất giống)
# - 0.50-0.60 = Lỏng lẻo (dễ nhầm lẫn)
FACE_DISTANCE_THRESHOLD=0.45

MIN_FACE_RATIO=0.15
PROCESS_EVERY_FRAMES=4

# Attendance
CONFIRM_SECONDS=3
PRESENCE_MAX_GAP=5

# Server
HOST=0.0.0.0
PORT=5000
DEBUG=True
