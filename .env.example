# Hệ thống điểm danh - Environment Variables
# Copy file này thành .env và điền các giá trị thực tế

# Flask Secret Key - tạo key mới cho production
SECRET_KEY=your-secret-key-here-change-in-production

# Database
DATABASE_PATH=attendance_system.db

# Camera
CAMERA_INDEX=0
DEMO_MODE=0

# Face Recognition
FACE_RECOGNITION_THRESHOLD=0.6
MIN_FACE_RATIO=0.15
PROCESS_EVERY_FRAMES=4

# Attendance
CONFIRM_SECONDS=3
PRESENCE_MAX_GAP=5

# Server
HOST=0.0.0.0
PORT=5000
DEBUG=True
